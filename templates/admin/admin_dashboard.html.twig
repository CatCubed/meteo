{% extends '@EasyAdmin/layout.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <style>
        .weather-dashboard {
            padding: 20px;
        }
        .greeting-card {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .greeting-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .greeting-text h1 {
            margin: 0;
            font-size: 24px;
        }
        .weather-emoji {
            font-size: 48px;
            margin-left: 20px;
        }
        .current-stats {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .stat-item {
            flex: 1;
            min-width: 200px;
            background: #f9f9f9;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
        }
        .stat-value {
            font-size: 24px;
            font-weight: bold;
            margin: 10px 0;
        }
        .stat-label {
            color: #666;
            font-size: 14px;
        }
        .chart-container {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .charts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        @media (max-width: 768px) {
            .greeting-header {
                flex-direction: column;
                align-items: flex-start;
            }
            .weather-emoji {
                margin-left: 0;
                margin-top: 10px;
            }
            .current-stats {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
        // Pass data from Twig to JavaScript
        const latestMeasurement = {{ latest_measurement|json_encode|raw }};
        const weatherStationName = "{{ weather_station_name }}";
        const temperatureData = {{ temperature_data|json_encode|raw }} || [];
        const humidityData = {{ humidity_data|json_encode|raw }} || [];
        const pressureData = {{ pressure_data|json_encode|raw }} || [];
    </script>
    <script src="{{ asset('js/dashboard.js') }}"></script>
{% endblock %}

{% block main %}
    <div class="weather-dashboard">
        <div class="greeting-card">
            <div class="greeting-header">
                <div class="greeting-text">
                    <h1>Hello! Welcome to the Weather Dashboard</h1>
                    <p>Monitoring station: <strong>{{ weather_station_name }}</strong></p>
                    <p>Last updated: <span id="lastUpdated"></span></p>
                </div>
                <div class="weather-emoji" id="weatherEmoji"></div>
            </div>

            <div class="current-stats">
                <div class="stat-item">
                    <div class="stat-label">Temperature</div>
                    <div class="stat-value" id="currentTemp"></div>
                    <div class="stat-unit">Â°C</div>
                </div>
                <div class="stat-item">
                    <div class="stat-label">Humidity</div>
                    <div class="stat-value" id="currentHumidity"></div>
                    <div class="stat-unit">%</div>
                </div>
                <div class="stat-item">
                    <div class="stat-label">Pressure</div>
                    <div class="stat-value" id="currentPressure"></div>
                    <div class="stat-unit">hPa</div>
                </div>
            </div>
        </div>

        <div class="charts-grid">
            <div class="chart-container">
                <h2>Temperature History</h2>
                <div id="temperatureChart"></div>
            </div>
            <div class="chart-container">
                <h2>Humidity History</h2>
                <div id="humidityChart"></div>
            </div>
            <div class="chart-container">
                <h2>Pressure History</h2>
                <div id="pressureChart"></div>
            </div>
        </div>
    </div>
{% endblock main %}